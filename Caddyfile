{
    admin off
    persist_config off
    auto_https off
    log {
        format json
    }
    servers {
        trusted_proxies static private_ranges 100.0.0.0/8
    }
}

:{$PORT} {
    log {
        format json
    }

    # Serve files from 'dist'
    root * dist

    # Enable gzip encoding
    encode gzip

    # Serve static files
    file_server

    # Rewrite for single-page application routing
    try_files {path} /index.html
}
